/drawShape
{
	% xofT = [ (a - b) * cos(t) ] + [ h * cos( ((a-b)/b)*t ) ]
	% yofT [ (a - b) * sin(t) ] + [ h * sin( ((a-b)/b)*t ) ]

  /a exch def
	/b exch def
	/h exch def
	/t exch def

  %break equation down into parts

  b a sub t cos mul % xofT part1
	h b a sub b exch div t mul cos mul %xofTpart2
  add % add xOfT parts back together

	b a sub t sin mul %yofTpart1
	h b a sub b exch div t mul sin mul %yofTpart2
	add % add yOfT parts back together
} def

/inch
{ 72 mul } def

4.25 inch 5.5 inch translate %starts at center of page
0 10 360
{
	1 1 720
	{
		newpath
		0 0 moveto
		dup
		dup 420 div exch 100 div exch 0
		setrgbcolor

		%%set parameters here for equation
		110 130 200
		drawShape lineto
		stroke
	} for
	rotate
} for

showpage
